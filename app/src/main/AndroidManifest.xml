<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.expensemobileapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseMobileApp"
        tools:targetApi="31">
        <activity
            android:name=".SearchTripActivity"
            android:label="@string/search_screen_name"
            android:exported="false" />
        <activity
            android:name=".ListExpenses"
            android:label="@string/listExpense_screen_name"
            android:exported="false" />
        <activity
            android:name=".AddDetailsActivity"
            android:label="@string/addExpense_screen_name"
            android:exported="false" />
        <activity
            android:name=".UpdateActivity"
            android:exported="false"
            android:label="@string/updateTrip_screen_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddTripActivity"
            android:exported="false"
            android:label="@string/addTrip_screen_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Expense Management App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>